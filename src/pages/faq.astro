---
import ThemeManager from '../components/ThemeManager.astro';
import ThemeToggleButton from '../components/ThemeToggleButton.jsx';
import FaqPage from '../components/FaqPage.jsx';
---

<html lang="en" class="h-full scroll-smooth">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Prestige Rentals - FAQ</title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  
  <ThemeManager />
</head>
<body class="bg-white dark:bg-gray-900 text-gray-800 dark:text-gray-200 font-sans min-h-screen flex flex-col">

  <header class="bg-white dark:bg-gray-900 shadow-md sticky top-0 z-50 transition-colors duration-300">
    <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
      <a href="/" class="text-3xl text-gray-800 dark:text-white" style="font-family: 'Playfair Display', serif;">
        Prestige Rentals
      </a>

      <div class="flex items-center space-x-4">
        <div class="hidden md:flex space-x-6 text-gray-600 dark:text-gray-300">
            <a href="/#featured" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Fleet</a>
            <a href="/#why-us" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Why Us</a>
            <a href="/#testimonials" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Testimonials</a>
        </div>
        <div class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
          <ThemeToggleButton client:load />
        </div>
        <a 
          href="/login" 
          class="px-5 py-2 bg-gray-800 text-white dark:bg-blue-600 dark:text-white font-semibold rounded-full shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300"
        >
          Sign In
        </a>
      </div>
    </nav>
  </header>

  <main class="flex-grow">
    <FaqPage client:load />
  </main>

  <footer class="bg-gray-900 dark:bg-black text-gray-300 py-16">
    <div class="container mx-auto px-6 grid grid-cols-1 md:grid-cols-4 gap-8">
        <div>
            <h3 class="text-xl text-white mb-4" style="font-family: 'Playfair Display', serif;">Prestige Rentals</h3>
            <p class="text-sm text-gray-400">Experience luxury on wheels. Unforgettable journeys start here.</p>
        </div>
        <div>
            <h4 class="font-semibold text-white mb-4">Quick Links</h4>
            <ul class="space-y-2 text-sm">
                <li><a href="/#featured" class="hover:text-blue-400">Our Fleet</a></li>
                <li><a href="/login" class="hover:text-blue-400">My Account</a></li>
                <li><a href="#" class="hover:text-blue-400">About Us</a></li>
            </ul>
        </div>
         <div>
            <h4 class="font-semibold text-white mb-4">Support</h4>
            <ul class="space-y-2 text-sm">
                <li><a href="/faq" class="hover:text-blue-400">FAQ</a></li>
                <li><a href="#" class="hover:text-blue-400">Contact Us</a></li>
                <li><a href="#" class="hover:text-blue-400">Terms of Service</a></li>
            </ul>
        </div>
        <div>
            <h4 class="font-semibold text-white mb-4">Follow Us</h4>
        </div>
    </div>
    <div class="container mx-auto px-6 text-center mt-12 border-t border-gray-800 pt-8">
      <p class="text-sm text-gray-500">&copy; 2025 Prestige Rentals. All Rights Reserved.</p>
    </div>
  </footer>

</body>
</html>
